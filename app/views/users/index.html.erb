<% provide(:title, 'All users') %>
<% if signed_in? %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |user| %>
      <li>
        <%= gravatar_for user%>
        <%= link_to user.name, user %>
      </li>
  <% end %>
</ul>
<% else %>
   <h2>Zaloguj się aby zobaczyć listę użytkowników!</h2>
<% end %>