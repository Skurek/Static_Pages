<% provide(:title, "Logowanie") %>
<h1>Logowanie</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.submit "Sign in", class: "btn btn-large btn-primary", value: "Zaloguj" %>
    <% end %>

    <p>Nowy uzytkownik? <%= link_to "Dolacz teraz!", signup_path %></p>
  </div>
</div>